<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.webclicz.schoolapp.Activities.StaffAttendance"
    android:background="@drawable/yellow_background">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/header_band"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        android:layout_gravity="top"
        android:gravity="top">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:src="@drawable/back_icon"
            android:id="@+id/backButton"
            android:layout_weight="0.14"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="@string/attendance"
            android:layout_gravity="left"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/colorWhite"/>
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">
        <Button
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/header_band"
            android:text="@string/take_attendance"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:id="@+id/take_attendance"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/header_band"
            android:text="@string/attendance_summary"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:id="@+id/attendanceSummary"/>
    </LinearLayout>
</LinearLayout>
